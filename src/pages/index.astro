---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Teams from "../components/Teams.astro";
import Projects from "../components/Projects.astro";
import Lists from "../components/Lists.astro";
import Talks from "../components/Talks.astro";
import Contact from "../components/Contact.astro";
import Footer from "../components/Footer.astro";
import { teams } from "../data/teams";
import { getCollection } from "astro:content";

const projects = await getCollection("projects");
const lists = await getCollection("lists");
const talks = await getCollection("talks");
---

<BaseLayout
	title="Jeff Anders"
	description="Co-Founder of Ambrook. Previously design at Scale AI, Meta, Minimill, Autodesk, and Venmo. Alum of Maryland. I like making cool things with cool people."
>
	<Teams teams={teams} />
	<Projects projects={projects} />
	<Talks talks={talks} />
	<Lists lists={lists} />
	<Contact />
	<Footer />
</BaseLayout>
