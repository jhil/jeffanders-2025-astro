---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Teams from "../components/Teams.astro";
import ProjectsGrid from "../components/ProjectsGrid.astro";
import { teams } from "../data/teams";
import { getCollection } from "astro:content";

const projects = await getCollection('projects');
---

<BaseLayout
	title="Astro Shadcn UI Template"
	description="This template helps you build apps with Astro, Tailwind CSS, and Shadcn UI."
>
	<!-- Teams Section -->
	<section class="container grid items-center gap-6 pt-6 pb-8 md:py-10">
		<div class="flex max-w-[980px] flex-col items-start gap-2">
			<Teams teams={teams} />
		</div>
	</section>

	<!-- Projects Grid Section -->
	<section class="container grid items-center gap-6 pt-6 pb-8 md:py-10">
		<ProjectsGrid projects={projects} />
	</section>
</BaseLayout>
