---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Teams from "../components/Teams.astro";
import ProjectsGrid from "../components/ProjectsGrid.astro";
import ListsGrid from "../components/ListsGrid.astro";
import TalksGrid from "../components/TalksGrid.astro";
import Contact from "../components/Contact.astro";
import { teams } from "../data/teams";
import { getCollection } from "astro:content";

const projects = await getCollection("projects");
const lists = await getCollection("lists");
const talks = await getCollection("talks");
---

<BaseLayout
	title="Jeff Anders"
	description="Co-Founder of Ambrook. Previously design at Scale AI, Meta, Minimill, Autodesk, and Venmo. Alum of Maryland. I like making cool things with cool people."
>
	<Teams teams={teams} />
	<ProjectsGrid projects={projects} />
	<TalksGrid talks={talks} />
	<ListsGrid lists={lists} />
	<Contact />
</BaseLayout>
