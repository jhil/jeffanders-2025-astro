---
import { Icon } from "astro-icon/components";
import { contacts } from "../data/contacts";
---

<section id="contact">
	<div
		class="grid justify-center grid-cols-[repeat(auto-fit,minmax(14rem,1fr))]"
	>
		{
			contacts.map((contact) => (
				<a
					href={contact.link}
					target="_blank"
					class="outline outline-muted p-8 flex gap-4 group items-center"
				>
					<Icon
						name={`simple-icons:${contact.icon}`}
						class={`h-5 w-5 flex-shrink-0 ${contact.invertInDark ? "dark:invert" : ""}`}
						style={`color: ${contact.color}`}
					/>
					<div class="flex flex-col justify-center">
						<h3 class="text-sm font-medium">
							<span class="animated-underline group-hover:after:w-full">
								{contact.name}
							</span>
						</h3>
						{contact.handle && (
							<span class="text-xs text-muted-foreground/90 group-hover:text-muted-foreground">
								{contact.handle}
							</span>
						)}
					</div>
				</a>
			))
		}
	</div>
</section>
