---
import Tile from "./Tile.astro";
import { contacts } from "../data/contacts";
---

<section id="contact">
	<div
		class="grid justify-center grid-cols-[repeat(auto-fit,minmax(14rem,1fr))]"
	>
		{
			contacts.map((contact) => (
				<Tile
					href={contact.link}
					target="_blank"
					icon={{
						name: `simple-icons:${contact.icon}`,
						color: contact.color,
						invertInDark: contact.invertInDark,
					}}
					title={contact.name}
					label={contact.handle}
					dense
				/>
			))
		}
	</div>
</section>
