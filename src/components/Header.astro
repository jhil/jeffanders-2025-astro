---
import ThemeToggle from "@/components/ThemeToggle.astro";
import { Image } from "astro:assets";
import { Button } from "@/components/ui/button";
import avatarImage from "../images/jeff-anders-photo.jpg";

const navItems = [
	{ label: "Teams", href: "/#teams" },
	{ label: "Projects", href: "/#projects" },
	{ label: "Talks", href: "/#talks" },
	{ label: "Lists", href: "/#lists" },
	{ label: "Contact", href: "/#contact" },
] as const;
---

<header
	class="sticky top-0 z-50 flex items-center justify-between w-full px-8 py-8 bg-background outline-[0.5px] outline-muted"
>
	<a href="/" class="flex items-center space-x-4 group">
		<Image
			src={avatarImage}
			alt="Jeff Anders avatar"
			class="w-8 h-8 rounded-xs"
			width={32}
			height={32}
		/>
		<h1 class="font-semibold">Jeff Anders</h1>
	</a>
	<nav class="flex space-x-2">
		<ul class="flex space-x-1">
			{
				navItems.map(({ href, label }) => (
					<li>
						<a
							href={href}
							data-section={href.replace("/#", "")}
							class="nav-link"
						>
							<Button variant="link">
								<span class="animated-underline">{label}</span>
							</Button>
						</a>
					</li>
				))
			}
		</ul>
		<ThemeToggle />
	</nav>
</header>

<script>
	import { initActiveSection } from "@/scripts/activeSection";
	initActiveSection();
</script>
